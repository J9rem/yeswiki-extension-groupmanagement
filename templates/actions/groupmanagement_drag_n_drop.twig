{% extends "@bazar/inputs/checkbox_drag_and_drop.twig" %}

{% block link_for_entry %}
  {% if optionsData[item_id] %}
    <a class="btn btn-default btn-xs view-page-item modalbox" 
        data-size="modal-lg" 
        title="{{ _t('BAZ_DRAG_n_DROP_CHECKBOX_SEE_ITEM') ~ " " ~ optionsData[item_id].title|striptags }}" 
        href="{{ url({tag:optionsData[item_id].id}) }}">
      <i class="fas fa-eye"></i>
    </a>
  {% else %}
    <button class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="right" title="{{ _t('GRPMNGT_ACTION_NO_ENTRY_FOR_THIS_USER') }}"><i class="fas fa-exclamation-triangle"></i></button>
  {% endif %}
  &nbsp;
{% endblock %}
